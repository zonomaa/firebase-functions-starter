{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./*",
        "../node_modules/@types/*",
        "../node_modules/*"
      ]
    },
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2020",
      "dom"
    ],
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "../node_modules",
    "**/*.test.ts",
  ]
}